#!/usr/bin/env ruby

require "bundler/setup"
require "fik"
require "fik/interfaces/cli"

require "pry"

CONFIG = Fik::Configuration.new("./lib/../sample").build

def game
  @_game ||= begin 
    actor = Fik::Models::Actor.new({"name" => "Bob", "starting_room" => "kitchen"})
    g = Fik::GameBuilder.new(CONFIG, actor).build
    interface = Fik::Interfaces::CLI.new(g)
  end
end
Pry.start

